{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Feature",
  "description": "Schema for a project feature definition",
  "type": "object",
  "required": ["id", "name", "description", "rationale", "type"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "description": { "type": "string", "minLength": 1 },
    "rationale": { "type": "string", "minLength": 1 },
    "type": { "type": "string", "enum": ["core", "optional"] },
    "problem_mapped_to": { "type": "string" },
    "build_order": { "type": "integer", "minimum": 1 },
    "deferred": { "type": "boolean" },
    "defer_reason": { "type": ["string", "null"] }
  },
  "additionalProperties": false
}
